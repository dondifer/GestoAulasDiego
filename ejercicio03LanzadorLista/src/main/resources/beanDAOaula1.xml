	</bean>


	<bean id="negocioAulasMapa" class="ejercicio03negocioo.AulasLN">
		<constructor-arg name="aulaDao" ref="MapAulaDao"></constructor-arg>
	</bean>

	<bean id ="ListaBean" class ="java.util.ArrayList">
	<constructor-arg>
	<list value-type="Aula">
	
	</list>
	
	</constructor-arg>
	
	
	
	</bean>
	
	
	
	<bean id ="MapBean" class ="java.util.HashMap">
	
	
	
	
	</bean>
	
	
	



