<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">














	<!-- new variable de clase ListDao para lanzarlo con la lista -->

	

	<!-- new variable de clase MapDao para lanzarlo con el mapa -->

	<bean id="MapAulaDao" class="ejercicio03dao.MapDao">
	<property name="edificio" ref="MapBean"/>

	</bean>

<bean id="ListAulaDao" class="ejercicio03dao.ListDao">
	<property name="edificio" ref="ListaBean">
	</property>
	

	</bean>


	<bean id="negocioAulasLista" class="ejercicio03negocioo.AulasLN">
